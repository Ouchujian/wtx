<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserJoinInfoDao">
	<select id="queryList"
		resultType="com.entity.UserJoinInfoEntity">
		select * from user_join_info a
		where
		1 = 1
		<if test="userId != null">
			and a.user_id = #{userId}
		</if>
		<if test="topic">
			and a.topic = #{topic}
		</if>
		<if test="type">
			and a.type = #{type}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(1) from user_join_info a
		where
		1 = 1
		<if test="userId != null">
			and a.user_id = #{userId}
		</if>
		<if test="topic">
			and a.topic = #{topic}
		</if>
		<if test="type">
			and a.type = #{type}
		</if>
	</select>

	<insert id="save">
		insert into
		user_join_info (
		<if test="userId != null">
			user_id
		</if>
		<if test="type != null">
			,type
		</if>
		<if test="topic != null">
			,topic
		</if>
		<if test="topicName != null">
			,topic_name
		</if>
		<if test="userName != null">
			,user_name
		</if>
		<if test="mobile != null">
			,mobile
		</if>
		<if test="remark != null">
			,remark
		</if>
		) value
		(
		<if test="userId != null">
			#{userId}
		</if>
		<if test="type != null">
			,#{type}
		</if>
		<if test="topic != null">
			,#{topic}
		</if>
		<if test="topicName != null">
			,#{topicName}
		</if>
		<if test="userName != null">
			,#{userName}
		</if>
		<if test="mobile != null">
			,#{mobile}
		</if>
		<if test="remark != null">
			,#{remark}
		</if>
		)
	</insert>

	<update id="update">
		update user_join_info
		<set>
			id = #{id}
			<if test="userId != null">
				,user_id = #{userId}
			</if>
			<if test="type != null">
				,type = #{type}
			</if>
			<if test="topic != null">
				,topic = #{topic}
			</if>
			<if test="topicName != null">
				,topic_name = #{topicName}
			</if>
			<if test="userName != null">
				,user_name = #{userName}
			</if>
			<if test="mobile != null">
				,mobile = #{mobile}
			</if>
			<if test="remark != null">
				,remark = #{remark}
			</if>
		</set>
		where
		<if test="id != null">
			id = #{id}
		</if>
	</update>

	<delete id="delete">
		update user_join_info
		set dr = 1
		where
		id = #{id}
	</delete>
</mapper>